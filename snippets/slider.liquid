{% assign slider_enabled = true %}
<div class="flexslider">
  <ul class="slides">
    {% for i in (1..6) %}
      {% capture slide_link %}slide_{{ i }}_link{% endcapture %}
      {% capture slide_img %}slide_{{ i }}_jpg{% endcapture %}
      {% capture slide_alt %}slide_{{ i }}_alt{% endcapture %}
      
        {% if settings[slide_img] != '""' and settings[slide_img] != '' %}
          <li>
            <a href="{{ settings[slide_link] }}" class="slide-link">
              {{ settings[slide_img] | img_tag: settings[slide_alt] }}
            </a>
          </li>
        {% endif %}
    {% endfor %}
  </ul>
</div>
